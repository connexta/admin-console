<features name="${project.artifactId}-${project.version}"
          xmlns="http://karaf.apache.org/xmlns/features/v1.3.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://karaf.apache.org/xmlns/features/v1.3.0 http://karaf.apache.org/xmlns/features/v1.3.0">

    <feature name="admin-beta-app" install="auto" version="${project.version}"
             description="DDF Admin App (Beta) includes a source setup wizard, LDAP setup wizard and a new GUI for the web context policy manager. Go to /admin/beta to access the UI.">
        <feature prerequisite="true">admin-beta-core</feature>
        <feature>admin-beta-ui</feature>
        <feature>admin-beta-federation</feature>
        <feature>admin-beta-security</feature>
        <feature>admin-beta-embedded-ldap</feature>
        <feature>admin-beta-query</feature>
    </feature>

    <feature name="admin-beta-temp-configurator" install="auto" version="${project.version}"
             description="Temporary version of the Configurator (Beta)">
        <!-- TODO switch to DDF dependencies after available in a release -->
        <bundle>mvn:org.codice.ddf.admin.beta/configurator-api/${project.version}</bundle>
        <bundle>mvn:org.codice.ddf.admin.beta/configurator-impl/${project.version}</bundle>
    </feature>

    <feature name="admin-beta-core" install="auto" version="${project.version}"
             description="DDF Admin Core (Beta)">
        <feature prerequisite="true">admin-beta-temp-configurator</feature>
        <bundle>mvn:com.google.code.gson/gson/${gson.version}</bundle>
        <bundle>mvn:org.codice.ddf.admin.beta/admin-api/${project.version}</bundle>
        <bundle>mvn:org.codice.ddf.admin.beta/config-handler-router/${project.version}</bundle>
    </feature>

    <feature name="admin-beta-federation" install="auto" version="${project.version}"
             description="DDF Admin Federation (Beta)">
        <feature prerequisite="true">admin-beta-core</feature>
        <bundle>mvn:org.apache.httpcomponents/httpcore-osgi/${httpcore.version}</bundle>
        <bundle>mvn:org.apache.httpcomponents/httpclient-osgi/${httpclient.version}</bundle>
        <bundle>mvn:org.codice.ddf.admin.beta/sources-config-handler/${project.version}</bundle>
    </feature>

    <feature name="admin-beta-security" install="auto" version="${project.version}"
             description="DDF Admin Security (Beta)">
        <feature prerequisite="true">admin-beta-core</feature>
        <feature>admin-beta-ldap-handler</feature>
        <bundle>mvn:org.codice.ddf.admin.beta/contextpolicy-config-handler/${project.version}
        </bundle>
    </feature>

    <feature name="admin-beta-ldap-handler" install="auto" version="${project.version}"
             description="DDF Admin Security (Beta) :: LDAP Handler">
        <feature prerequisite="true">admin-beta-core</feature>
        <bundle>mvn:org.codice.ddf.admin.beta/ldap-config-handler/${project.version}</bundle>
    </feature>

    <feature name="admin-beta-embedded-ldap" install="auto" version="${project.version}"
             description="DDF Admin Security (Beta) :: Embedded LDAP Handler ">
        <feature prerequisite="true">admin-beta-core</feature>
        <bundle>mvn:org.codice.ddf.admin.beta/embedded-ldap-config-handler/${project.version}
        </bundle>
    </feature>

    <feature name="admin-beta-ui" install="auto" version="${project.version}"
             description="DDF Admin UI (Beta)">
        <feature prerequisite="true">admin-beta-core</feature>
        <bundle>mvn:org.codice.ddf.admin.beta/admin-ui/${project.version}</bundle>
        <bundle>mvn:org.codice.ddf.admin.beta/admin-module/${project.version}</bundle>
    </feature>

    <feature name="admin-beta-query" install="auto" version="${project.version}"
             description="DDF Admin Query (Beta) ">
        <feature>scr</feature>
        <bundle>mvn:com.graphql-java/graphql-java-servlet/0.7.0</bundle>
        <bundle>mvn:com.fasterxml.jackson.core/jackson-core/2.7.3</bundle>
        <bundle>mvn:com.fasterxml.jackson.core/jackson-annotations/2.7.3</bundle>
        <bundle>mvn:com.fasterxml.jackson.core/jackson-databind/2.7.3</bundle>
        <bundle>mvn:com.fasterxml.jackson.datatype/jackson-datatype-jdk8/2.7.3</bundle>
        <bundle>mvn:commons-io/commons-io/2.2</bundle>
        <bundle>wrap:mvn:com.google.guava/guava/19.0</bundle>
        <bundle>wrap:mvn:com.graphql-java/graphql-java/2.2.0</bundle>
        <bundle>mvn:com.graphql-java/graphql-java-annotations/0.13.1</bundle>
        <bundle>wrap:mvn:org.projectlombok/lombok/1.16.6</bundle>
        <bundle>mvn:commons-fileupload/commons-fileupload/1.3.2</bundle>
        <bundle>wrap:mvn:org.antlr/antlr4-runtime/4.5.1</bundle>
        <bundle>mvn:org.codice.ddf.admin.beta/admin-query/${project.version}</bundle>
    </feature>
</features>
