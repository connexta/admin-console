<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">
    <bean id="cswFieldProvider" class="org.codice.ddf.admin.sources.csw.CswFieldProvider">
        <argument ref="configuratorFactory"/>
    </bean>

    <bean id="openSearchFieldProvider"
          class="org.codice.ddf.admin.sources.opensearch.OpenSearchFieldProvider">
        <argument ref="configuratorFactory"/>
    </bean>

    <bean id="wfsFieldProvider" class="org.codice.ddf.admin.sources.wfs.WfsFieldProvider">
        <argument ref="configuratorFactory"/>
    </bean>

    <service ref="cswFieldProvider" interface="org.codice.ddf.admin.api.FieldProvider"/>
    <service ref="openSearchFieldProvider" interface="org.codice.ddf.admin.api.FieldProvider"/>
    <service ref="wfsFieldProvider" interface="org.codice.ddf.admin.api.FieldProvider"/>

    <reference id="configuratorFactory"
               interface="org.codice.ddf.admin.configurator.ConfiguratorFactory"
               availability="mandatory" filter="(type=txact)"/>
</blueprint>
