<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>admin</artifactId>
        <groupId>org.codice.ddf.admin.beta</groupId>
        <version>0.1.2-SNAPSHOT</version>
    </parent>
    <artifactId>admin-api</artifactId>
    <packaging>bundle</packaging>

    <name>DDF :: Admin (Beta) :: API</name>
    <dependencies>

        <!--todo this dependency needs to be removed once the dependency on the PolicyManager class is fixed-->
        <dependency>
            <groupId>ddf.security.policy</groupId>
            <artifactId>security-policy-context</artifactId>
            <version>${ddf.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>ddf.admin.core</groupId>
            <artifactId>admin-core-api</artifactId>
            <version>${ddf.version}</version>
            <scope>provided</scope>
        </dependency>

        <!--TODO: switch this to DDF-provided version of service when available-->
        <dependency>
            <groupId>org.codice.ddf.admin.beta</groupId>
            <artifactId>configurator-api</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!--todo these ldap dependencies to be removed when ldap is yanked out of this module-->
        <dependency>
            <groupId>org.codice.org.forgerock.opendj</groupId>
            <artifactId>opendj-core</artifactId>
            <version>3.0.0.ALPHA2</version>
        </dependency>
        <dependency>
            <groupId>org.forgerock.commons</groupId>
            <artifactId>i18n-slf4j</artifactId>
            <version>1.4.2</version>
        </dependency>
        <dependency>
            <groupId>org.forgerock.commons</groupId>
            <artifactId>i18n-core</artifactId>
            <version>1.4.2</version>
        </dependency>
        <dependency>
            <groupId>org.codice.org.forgerock.commons</groupId>
            <artifactId>forgerock-util</artifactId>
            <version>2.0.0.ALPHA1</version>
        </dependency>
        <dependency>
            <groupId>org.codice.org.forgerock.opendj</groupId>
            <artifactId>opendj-grizzly</artifactId>
            <version>3.0.0.ALPHA2</version>
        </dependency>
        <dependency>
            <groupId>org.glassfish.grizzly</groupId>
            <artifactId>grizzly-framework</artifactId>
            <version>2.3.14</version>
        </dependency>
        <!--ldap connection dependencies end-->

        <dependency>
            <groupId>org.apache.karaf.bundle</groupId>
            <artifactId>org.apache.karaf.bundle.core</artifactId>
            <version>${karaf.version}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.karaf.features</groupId>
            <artifactId>org.apache.karaf.features.core</artifactId>
            <version>${karaf.version}</version>
        </dependency>
        <dependency>
            <groupId>commons-validator</groupId>
            <artifactId>commons-validator</artifactId>
            <version>1.3.1</version>
        </dependency>
        <dependency>
            <groupId>com.google.code.gson</groupId>
            <artifactId>gson</artifactId>
            <version>${gson.version}</version>
        </dependency>
        <dependency>
            <groupId>oro</groupId>
            <artifactId>oro</artifactId>
            <version>2.0.8</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}-beta</Bundle-SymbolicName>
                        <Embed-Dependency>
                            <!--todo Remove when ldap is removed from module-->
                            <!--ldap connection dependencies-->
                            opendj-grizzly,
                            forgerock-util,
                            grizzly-framework,
                            opendj-core,
                            i18n-slf4j,
                            i18n-core
                            <!--ldap connection dependencies end -->
                        </Embed-Dependency>
                        <Export-Package>
                            org.codice.ddf.admin.api.*
                        </Export-Package>
                    </instructions>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.jacoco</groupId>
                <artifactId>jacoco-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>default-check</id>
                        <goals>
                            <goal>check</goal>
                        </goals>
                        <configuration>
                            <haltOnFailure>true</haltOnFailure>
                            <rules>
                                <rule>
                                    <element>BUNDLE</element>
                                    <limits>
                                        <limit>
                                            <counter>INSTRUCTION</counter>
                                            <value>COVEREDRATIO</value>
                                            <minimum>0.49</minimum>
                                        </limit>
                                        <limit>
                                            <counter>BRANCH</counter>
                                            <value>COVEREDRATIO</value>
                                            <minimum>0.45</minimum>
                                        </limit>
                                        <limit>
                                            <counter>COMPLEXITY</counter>
                                            <value>COVEREDRATIO</value>
                                            <minimum>0.38</minimum>
                                        </limit>
                                    </limits>
                                </rule>
                            </rules>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>