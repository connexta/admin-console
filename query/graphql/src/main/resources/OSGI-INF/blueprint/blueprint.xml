<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" >

    <bean id="relayProvder" class="org.codice.ddf.admin.graphql.RelayGraphQLProvider" />
    <service ref="relayProvder">
        <interfaces>
            <value>graphql.servlet.GraphQLQueryProvider</value>
        </interfaces>
    </service>

    <reference-list id="actionCreators"
                    interface="org.codice.ddf.admin.api.action.ActionCreator"
                    availability="optional">
        <reference-listener bind-method="bindCreator" unbind-method="unbindCreator" ref="graphQLServiceCreator"/>
    </reference-list>

    <reference-list id="graphqlProviders"
                    interface="graphql.servlet.GraphQLQueryProvider"
                    availability="optional" />

    <reference id="configuratorFactory"
               interface="org.codice.ddf.admin.configurator.ConfiguratorFactory"
               availability="mandatory" filter="(type=txact)"/>

    <bean id="graphQLServiceCreator" class="org.codice.ddf.admin.graphql.service.GraphQLServiceCreatorImpl" >
        <property name="graphqlProviders" ref="graphqlProviders" />
    </bean>
    <service ref="graphQLServiceCreator" interface="org.codice.ddf.admin.graphql.service.GraphQLServiceCreator" />

</blueprint>
