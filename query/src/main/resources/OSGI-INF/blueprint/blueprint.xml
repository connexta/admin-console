<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

    <bean id="ldapProvider" class="org.codice.ddf.admin.query.ldap.LdapGraphQLProvider" />
    <service ref="ldapProvider">
        <interfaces>
            <value>graphql.servlet.GraphQLMutationProvider</value>
            <value>graphql.servlet.GraphQLQueryProvider</value>
        </interfaces>
    </service>

    <bean id="stsProvider" class="org.codice.ddf.admin.query.sts.StsGraphQLProvider" />
    <service ref="stsProvider">
        <interfaces>
            <value>graphql.servlet.GraphQLQueryProvider</value>
        </interfaces>
    </service>

    <bean id="sourcesProvider" class="org.codice.ddf.admin.query.sources.SourceGraphQLProvider" />
    <service ref="sourcesProvider">
        <interfaces>
            <value>graphql.servlet.GraphQLQueryProvider</value>
            <value>graphql.servlet.GraphQLMutationProvider</value>
        </interfaces>
    </service>

    <bean id="connectionProvider" class="org.codice.ddf.admin.query.connection.ConnectionGraphQLProvider" />
    <service ref="connectionProvider">
        <interfaces>
            <value>graphql.servlet.GraphQLQueryProvider</value>
            <value>graphql.servlet.GraphQLMutationProvider</value>
        </interfaces>
    </service>

    <bean id="wcpmProvder" class="org.codice.ddf.admin.query.wcpm.WcpmGraphQLProvider" />
    <service ref="wcpmProvder">
        <interfaces>
            <value>graphql.servlet.GraphQLQueryProvider</value>
            <value>graphql.servlet.GraphQLMutationProvider</value>
        </interfaces>
    </service>

</blueprint>
